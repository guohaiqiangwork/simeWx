<view class='box-detail' style="padding-top:{{bar_Height  + 42}}px;">
  <navbar title='{{title}}' show_bol='{{ishideback}}' my_class='{{my_class}}'></navbar>
</view>

<!-- 添加收货地址 -->
<view wx:if="{{items.length == 0}}">
  <view class="address_list">
    <view class="address_list_left">收货人</view>
    <input class="address_list_right" value="{{receiver}}" name="input" placeholder="请填写收货人姓名" bindinput="nameInput" />
  </view>
  <view class="address_list">
    <view class="address_list_left">手机号码</view>
    <input class="address_list_right" value="{{mobile}}" name="input" placeholder="请填写收货人手机号码" bindinput="phoneInput" maxlength="11" />
  </view>
  <view class="address_list">
    <view class="address_list_left">所在地区</view>
    <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
      <view class="picker font_size30">
        {{region[0]}}{{region[1]}}{{region[2]}}
      </view>
    </picker>
  </view>
  <view class="address_list">
    <view class="address_list_left">详细地址</view>
    <input class="address_list_right" value="{{address}}" name="input" placeholder="街道、楼牌号等" bindinput="addresInput" />
  </view>
  <view class="address_list" style="margin-top:30rpx">
    <view class="address_list_left margin_left2">设置默认地址</view>
    <switch bindchange="switch2Change" style="margin-left:50%" checked="{{!isDefault}}" />
  </view>

  <view class="goPay" catchtap="addAddress">
    保存
  </view>

</view>
<!-- 新增结束 -->

<!-- 地址列表 -->
<view wx:if="{{items.length > 0}}">
  <view wx:for="{{items}}" wx:key="index">
    <movable-area class='movable-area'>
      <movable-view direction="horizontal" class='movable-view'>
        <view class="touch-item {{item.isTouchMove ? 'touch-move-active' : ''}}" data-index="{{index}}" bindtouchstart="touchstart" bindtouchmove="touchmove">
          <!-- <view class="content" bindtap='goDetail'>{{item.content}}</view> -->
          <view class="content">
            <view class="view_display">
              <view class="width70">
                <view class="view_display">
                  <view class="font_color5A font_size30">
                    {{item.receiver}}
                  </view>
                  <view class="font_size24 margin_left2">
                    {{item.mobile}}
                  </view>
                  <view class="left_mo_ren margin_left2" hidden="{{item.isDefault != 1}}">
                    默认
                  </view>
                </view>
                <view class="font_size24">
                  {{item.province}}{{item.city}}{{item.area}}{{item.address}}
                </view>
              </view>
              <view class="width30" catchtap="editAddress" data-item="{{item}}">
                <view class="right_btn">编辑</view>
              </view>
            </view>
          </view>
          <view class="del" catchtap="del" data-index="{{index}}" data-id="{{item.id}}">删除</view>
        </view>
      </movable-view>
    </movable-area>
  </view>
  <view class="goPay" catchtap="newAddAddress">
    添加新地址
  </view>
</view>