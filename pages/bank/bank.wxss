.goPay {
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background: linear-gradient(to right, #ff342d, #ff5882);
  position: fixed;
  bottom: 0;
  width: 750rpx;
}

movable-area {
  width: 100%;
  height: 200rpx;
}

.movable-view {
  width: 100%;
  height: 100%;
}

.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.content {
  width: 100%;
  /* height: 180rpx; *//* background: linear-gradient(to right, #FF7066,#FC484E); */
  display: flex;
  color: #fff;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  margin-top: 20rpx;
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  height: 180rpx;
  margin-top: 20rpx;
}

.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

