@import '../paymentOrder/paymentOrder.wxss';

.moudel {
  width: 690rpx;
  height: 600rpx;
  margin-left: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 30rpx;
}

.moudel_one {
  width: 580rpx;
  margin-left: 55rpx;
  font-size: 24rpx;
  padding-top: 44rpx;
}

.bank_border {
  border-bottom: 1px solid #eee;
  padding-bottom: 20rpx;
}

.bank_img {
  width: 27rpx;
  height: 27rpx;
  margin-top: 4rpx;
}

.bank_img_right {
  width: 13rpx;
  height: 21rpx;
}

.btn {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 3;
  border-radius: 50rpx;
  font-size: 32rpx;
  color: #fff;
  background: linear-gradient(to right, #ff342d, #ff5882);
  margin-top: 40rpx;
}

/* 弹出层 */

.isRuleShow {
  display: block;
}

.isRuleHide {
  display: none;
}

.ruleZhezhao {
  height: 100%;
  width: 100%;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 2;
  top: 0;
  left: 0;
}

.conter_motai {
  background: rgba(255, 255, 255, 1);
  border: 1px solid #fff;
  position: absolute;
  color: #333;
  font-size: 30rpx;
  height: 470rpx;
  overflow: auto;
  width: 100%;
  bottom: 0;
}

.list_img {
  width: 50rpx;
  height: 50rpx;
}

.bank_list {
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.bank_list_one {
  margin-top: 20rpx;
}

.bankBtn {
  border: 1px solid #ff342d;
  text-align: center;
  background-color: #ff342d;
  color: #fff;
  font-size: 26rpx;
  height: 50rpx;
  line-height: 2;
  border-radius: 40rpx;
  width: 100rpx;
  margin-left: 8%
}
