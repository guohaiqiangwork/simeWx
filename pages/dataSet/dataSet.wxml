<view class='box-detail' style="padding-top:{{bar_Height  + 42}}px;">
  <navbar title='个人资料设置' show_bol='{{ishideback}}' my_class='{{my_class}}'></navbar>
</view>

<view class="list_moudel">
  <view class="view_display list_one" catchtap="selectImg">
    <view class="font_size32 width45 font_color33">
      头像
    </view>
    <view class="view_display" style="justify-content:flex-end;width:54%">
      <view class="headImgCla">
        <image src="{{listData.avatar}}" style="width:60rpx;height:64rpx;"></image>

      </view>
      <image src="/image/right99.png" class="right" style="margin-top:7%"></image>
    </view>
  </view>
  <view class="view_display list_one" catchtap="goModifyName" data-value="{{listData.nickname}}">
    <view class="font_size32 width45 font_color33">
      用户名
    </view>
    <view class="width54 text_right font_color0c">
      <text>{{listData.nickname}}</text>
      <image src="/image/right99.png" class="right"></image>
    </view>
  </view>
  <view class="view_display list_one" catchtap="goModifyPhone">
    <view class="font_size32 width45 font_color33">
      手机号
    </view>
    <view class="width54 text_right font_color0c">
      <text>{{listData.mobile}}</text>
      <image src="/image/right99.png" class="right"></image>
    </view>
  </view>
  <view class="view_display list_one" bindchange="bindPickerChange">
    <view class="font_size32 width45 font_color33">
      性别
    </view>
    <view class="width54 text_right font_color0c view_display">
      <!-- <text>{{listData.sex}}</text> -->
      <view class="width60"></view>
      <picker bindchange="bindPickerChange" value="{{index}}" range="{{sexList}}" class="view_picker">
        {{sexList[sexIndex]}}
      </picker>
      <image src="/image/right99.png" class="right" style="margin-left:36%"></image>
    </view>
  </view>
  <view class="view_display list_one">
    <view class="font_size32 width45 font_color33">
      生日
    </view>
    <view class="width54 text_right font_color0c view_display">
      <picker mode="date" value="{{birthdayDay}}" class="view_picker" start="1900-09-01" end="2999-09-01" bindchange="rememberDayPick">
        {{birthdayDay}}
      </picker>
      <image src="/image/right99.png" class="right" style="margin-left:95%"></image>
    </view>
  </view>
  <view class="view_display list_one">
    <view class="font_size32 width45 font_color33">
      纪念日
    </view>
    <view class="width54 text_right font_color0c view_display">
      <picker mode="multiSelector" disabled="{{timeFalgOne}}" bindchange="bindMultiPickerChange" style="width:90%" bindcolumnchange="bindMultiPickerColumnChange" value="{{rememberDay}}" range="{{multiArray}}">
        {{rememberDay}}
      </picker>
      <image src="/image/right99.png" class="right" hidden="{{timeFalgOne}}"></image>
    </view>
  </view>
</view>


<!-- 纪念日moudel -->

<view class="ruleZhezhao {{isRuleTrue?'isRuleShow':'isRuleHide'}}">
  <view class="conter_motai ">
    <view class="text_center">
      <view class=" font_size32 title">
        请核对以下信息
      </view>
      <view class="font_size36  margin_top5">
        {{rememberDay}}
      </view>
      <view class="font_size24 font_colorf4 margin_top2">
        *纪念日1年只能修改一次
      </view>
    </view>
    <view class="view_display">
      <view class="model_btn margin_left6" catchtap="hideRule">重新填写</view>
      <view class="model_btn margin_left3" catchtap="saveData" data-falg="jn">确认无误</view>
    </view>
  </view>

</view>