<!--index.wxml-->
<view class='box-detail' style="padding-top:{{bar_Height  + 42}}px;">
  <navbar title='首页' show_bol='{{ishideback}}'></navbar>
</view>

<view class="search margin_top2">
  <input type="text" placeholder="输入搜索关键词" value="{{name}}" bindinput="bindinput" bindconfirm="bindconfirm"></input>
  <image src="/image/icon/search.svg"></image>
</view>
<view class="swiper-container">
  <swiper indicator-dots="true" indicator-active-color="#fff" autoplay circular>
    <swiper-item wx:for="{{banners}}" wx:key="id">
      <image mode="aspectFill" bindtap="tapBanner" data-id="{{item.businessId}}" src="{{item.picUrl}}" />
    </swiper-item>
  </swiper>
</view>
<!-- 导航栏 -->
<view class="">
  <view class="margin_top3 margin_left6 tab_width" wx:for="{{tabList}}" wx:key="index">
    <view>
      <image src="{{item.picUrl}}" class="tabList_img"></image>
    </view>
    <view class="font_size28 font_color33 margin_top2">{{item.name}}</view>
  </view>
</view>
<!-- 新品发现 -->
<view class="font_color00 margin_top2">
  <view class="font_size34 text_center">*新品发现*</view>
  <scroll-view class='wrapper' scroll-x="true">
    <view class="new_moudel" wx:for="{{newList}}" wx:key="index" catchtap="goProudctDetails" data-productId="{{item.id}}">
      <view>
        <image src="{{item.picUrl}}" class="new_img"></image>
      </view>
      <view class="font_size24"> {{item.naem}}</view>
      <view class="font_size18">{{item.falg}}</view>
      <view class="view_display margin_top2">
        <view class="font_size28 font_colorf4 width70">¥{{item.price}}</view>
        <view>
          <image src="/image/add.png" class="new_add_img"></image>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
<!-- end -->
<!-- 邀请好友 -->
<image src="/image/index_yq.png" class="index_yq_img"></image>
<!-- end -->
<!-- 产品列表 -->
<view>
  <view class="text_center">- 面点速食-</view>
  <view>
    <image src="/image/switch/1.jpg" class="product_img"></image>
  </view>

  <view class="product_list_moudel" wx:for="{{newList}}" wx:key="index">
    <view>
     <view class="view_display fx">
        <view class="product_list_left">赚</view>
        <view class="product_list_right">¥ {{item.price}}</view>
      </view>
       <view class="product_none">已抢光</view>
      <image src="{{item.picUrl}}" class="product_list_img"></image>
    </view>
    <view class="font_size24"> {{item.naem}}</view>
    <view class="font_size18">{{item.falg}}</view>
    <view class="view_display margin_top2">
      <view class="font_size28 font_colorf4 width70">¥{{item.price}}</view>
      <view>
        <image src="/image/add.png" class="new_add_img"></image>
      </view>
    </view>
  </view>


</view>
<!-- 测试 -->
<view>
  <button bindtap="goSet">存储数据在本地</button>
  <button bindtap="getSet">获取存储数据在本地</button>
</view>

