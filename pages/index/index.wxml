<!--index.wxml-->
<view class='box-detail' style="padding-top:{{bar_Height  + 42}}px;">
  <navbar title='首页' show_bol='{{ishideback}}'></navbar>
</view>
<view class="search margin_top2">
  <input type="text" placeholder="输入搜索关键词" value="{{name}}" bindinput="bindinput" bindconfirm="bindconfirm"></input>
  <image src="/image/icon/search.svg"></image>
</view>
<view class="swiper-container">
  <swiper indicator-dots="true" indicator-active-color="#fff" autoplay circular>
    <swiper-item wx:for="{{banners}}" wx:key="id">
      <image mode="aspectFill" bindtap="tapBanner" data-id="{{item.id}}" src="{{item.carousel}}" />
    </swiper-item>
  </swiper>
</view>
<!-- 导航栏 -->
<view class="">
  <view class="margin_top3 margin_left6 tab_width" catchtap="goCity">
    <view>
      <image src="/image/payHot.png" class="tabList_img"></image>
    </view>
    <view class="font_size28 font_color33 margin_top2">同城</view>
  </view>
  <view class="margin_top3 margin_left6 tab_width" wx:for="{{tabList}}" wx:key="index" bindtap="toViewClick" data-code="{{item.code}}">
    <view>
      <image src="{{item.picture}}" class="tabList_img"></image>
    </view>
    <view class="font_size28 font_color33 margin_top2">{{item.name}}</view>
  </view>
</view>
<!-- 新品发现 -->
<view class="font_color00 margin_top2">
  <view class="font_size34 text_center">*新品发现*</view>
  <scroll-view class='wrapper' scroll-x="true">
    <view class="new_moudel" wx:for="{{newList}}" wx:key="index" catchtap="goProudctDetails" data-productId="{{item.id}}">
      <view>
        <image src="{{item.pictureUrl}}" class="new_img"></image>
      </view>
      <view class="font_size24 view_hidden"> {{item.goodsName}}</view>
      <view class="font_size18">{{item.title}}</view>
      <view class="view_display margin_top2">
        <view class="font_size28 font_colorf4 width70">¥{{item.price}}</view>
        <view catchtap="addShopCard" data-spId="{{item.spId}}" data-id="{{item.id}}">
          <image src="/image/add.png" class="new_add_img"></image>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
<!-- end -->
<!-- 邀请好友 -->
<image src="{{bannerUrl.banner}}" class="index_yq_img" catchtap="tapBanner" data-id="{{bannerUrl.id}}" data-type="bar"></image>
<!-- end -->
<!-- 产品列表 -->

<scroll-view style="height:{{winHeight}}" scroll-into-view="{{toView}}" scroll-y="true" bindscroll="scrollTo">
  <view wx:for="{{tabList}}" wx:key='index' id="{{item.id}}" wx:for-item="items">
    <view class="text_center">- {{items.name}} -</view>
    <view>
      <image src="{{items.picture}}" class="product_img"></image>
    </view>
    <view class="product_list_moudel" wx:for="{{items.goodsList}}" wx:key="index">
      <view catchtap="goProudctDetails" data-productId="{{item.id}}">
        <view class="view_display fx" hidden="{{item.rebate == 0}}">
          <view class="product_list_left">赚</view>
          <view class="product_list_right">¥ {{item.rebate}}</view>
        </view>
        <view class="product_none" hidden="{{item.inventory != 0}}">已抢光</view>
        <image src="{{item.pictureUrl}}" class="product_list_img"></image>
      </view>
      <view class="font_size24"> {{item.goodsName}} {{items.spId}}</view>
      <view class="font_size18">{{item.title}}</view>
      <view class="view_display margin_top2">
        <view class="font_size28 font_colorf4 width70">¥{{item.price}}</view>
        <view catchtap="addShopCard" data-spId="{{item.pecificationId}}" data-id="{{item.id}}">
          <image src="/image/add.png" class="new_add_img"></image>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
