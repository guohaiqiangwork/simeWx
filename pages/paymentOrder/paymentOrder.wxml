<view class='box-detail' style="padding-top:{{bar_Height  + 42}}px;">
  <navbar title='支付订单' show_bol='{{ishideback}}' my_class='{{my_class}}'></navbar>
</view>


<view class="pay_order_title">
  <view wx:if="{{countDown}}">
    剩余时间：{{min}} : {{sec}}
  </view>
  <view wx:else="{{countDown}}">
    剩余时间：00 : 00
  </view>

</view>
<view class="font_size32 view_display money_moudel">
  <view class="font_color33">需支付：</view>
  <view class="font_colorf4">{{totalPrice}}元</view>
</view>

<!-- 支付方式 -->
<view class="pay_list">
  <view class="pay_list_title">
    选择支付方式
  </view>
  <radio-group bindchange="radiochange">
    <view class="view_display pay_list_content">
      <view>
        <image src="/image/payimg/ye.png" class="pay_list_img"></image>
      </view>
      <view class="font_size30 margin_left2">余额支付</view>
      <view style="margin-left:60%">
        <radio value='ye'></radio>

      </view>
    </view>
    <view class="view_display pay_list_content">
      <view>
        <image src="/image/payimg/wx.png" class="pay_list_img"></image>
      </view>
      <view class="font_size30 margin_left2">微信支付</view>
      <view style="margin-left:60%">
        <radio value='wx'></radio>
      </view>
    </view>
  </radio-group>
</view>


<!-- 确认支付 -->
<view class="goPay" catchtap="goPay">
  确认付款
</view>


<!-- 密码输入框 -->
<view class="password_moudel_bj" hidden="{{payMoudel}}">
  <view class="password_moudel">
    <!-- 标题 -->
    <view class="view_display  password_moudel_title ">
      <image src="/image/close.png" class="model_close" catchtap="closeM"></image>
      <view style="margin-left:140rpx;margin-top:-12rpx">请输入密码</view>
    </view>
    <view class="text_center font_size30 margin_top3">需支付</view>
    <view class="font_size55 text_center">￥{{totalPrice}}</view>
    <!-- 密码框 -->
    <view class='password-input-box'>
      <view class='input' bindtap='getFocus'>
        <view wx:for="{{Length}}" wx:key="item" class='input-content'>
          <input value="{{Value.length>=index+1?Value[index]:''}}" disabled password='{{ispassword}}' catchtap='Tap' ></input>
        </view>
      </view>
      <input name="password" password="{{true}}" class='password-input' maxlength="{{Length}}" focus="{{isFocus}}" bindinput="password_input" type="digit"></input>
    </view>
  </view>
</view>
