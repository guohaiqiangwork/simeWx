/* 选中后的 背景样式 */

radio .wx-radio-input.wx-radio-input-checked {
  background: linear-gradient(to right, #ff342d, #ff5882);
  border: none;
}

.goPay {
  font-size: 34rpx;
  color: #fff;
  text-align: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background: linear-gradient(to right, #ff342d, #ff5882);
  position: fixed;
  bottom: 0;
  width: 750rpx;
}

/* 密码输入 */

.password_moudel_bj {
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  overflow: hidden;
  z-index: 1;
  position: absolute;
}
.password_moudel {
  width: 580rpx;
  height: 440rpx;
  background-color: #fff;
  border-radius: 20rpx;
  position: fixed;
  top: 26%;
  left: 12%;
}
.password_moudel_title{
  padding-top: 30rpx;
  border-bottom: 1px solid #EEEEEE;
  padding-bottom: 20rpx
}
.model_close{
  width: 32rpx;
  height: 32rpx;
  margin-left:42rpx;
}

.password-input-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  height: 76rpx;
  margin-top: 50rpx;
}

.input-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.input {
  height: 100rpx;
  width: 100%;
  border: 1px solid #bbb;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.input>view:nth-child(6) {
  border-right: none;
}

.input>view {
  height: 100%;
  width: 16.6%;
  border-right: 1px solid #bbb;
}

.password-input {
  width: 0;
  height: 0;
}



.title_hot{
