/* pages/searchResult/searchResult.wxss */

/* @import "/pages/index/index.wxss"; */

.search_tab {
  width: 33%;
  /* border-right: 1px solid #0C0C0C; */
  margin-top: 20rpx;
  background-color: #fff;
}

.order_tab_fcolor {
  color: #0c0c0c;
  font-size: 32rpx;
}

.order_fcolor {
  font-weight: 700;
  font-size: 32rpx;
}

.product_list_moudel {
  width: 360rpx;
  height: 500rpx;
  display: inline-block;
  margin-left: 10rpx;
}

.product_list_img {
  width: 360rpx;
  height: 370rpx;
}

.fx {
  position: absolute;
  margin-top: 20rpx;
}

.product_none {
  background-color: #585252c7;
  width: 360rpx;
  height: 370rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  line-height: 10;
}

.product_list_left {
  width: 42rpx;
  height: 36rpx;
  font-size: 24rpx;
  color: #f42300;
  border: 1px solid #f42300;
  text-align: center;
}

.product_list_right {
  width: 110rpx;
  height: 36rpx;
  border-top-right-radius: 18rpx;
  border-bottom-right-radius: 18rpx;
  background: linear-gradient(to right, #ff342e, #ff5882);
  color: #fff;
  font-size: 24rpx;
  border: 1px solid #f42300;
}

.new_add_img {
  width: 46rpx;
  height: 46rpx;
}

.top_moudel {
  position: fixed;
  top: 120rpx;
  z-index: 9999;
  width: 100%;
  height: 160rpx;
}

.arr {
  display: inline-block;
  margin-top: -3%;
  margin-top: 2%
}

.arrUp {
  width: 0;
  height: 0;
  border: 8rpx solid transparent;
  border-bottom-color: #ccc;
  cursor: pointer;
}

.arrDown {
  width: 0;
  height: 0;
  border: 8rpx solid transparent;
  border-top-color: #ccc;
  margin-top: 10rpx;
  cursor: pointer;
}
