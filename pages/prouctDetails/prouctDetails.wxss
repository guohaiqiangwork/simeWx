.swiper-container {
  width: 750rpx;
  height: 720rpx;
  position: relative;
  /* margin-top: 10rpx */
}

.swiper-container swiper {
  width: 750rpx;
  height: 720rpx;
}

.swiper-container swiper image {
  width: 750rpx;
  height: 720rpx;
}

.product_list_left {
  width: 42rpx;
  height: 36rpx;
  font-size: 24rpx;
  color: #f42300;
  border: 1px solid #f42300;
  text-align: center;
}

.product_list_right {
  height: 36rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  border-top-right-radius: 18rpx;
  border-bottom-right-radius: 18rpx;
  background: linear-gradient(to right, #ff342e, #ff5882);
  color: #fff;
  font-size: 22rpx;
  border: 1px solid #f42300;
}

.product_btn {
  border-radius: 50rpx;
  text-align: center;
  border: 1px solid #f42300;
  color: #f42300;
  font-size: 22rpx;
  padding: 10rpx 18rpx 10rpx 18rpx;
  margin-left: 10rpx;
  margin-top: -10rpx;
}

/* 列表 */

.product_list_g {
  width: 710rpx;
  background-color: #fff;
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.product_list_g .list {
  border-bottom: 1px solid #e9e9e9;
  width: 95%;
  margin-left: 2%;
  display: flex;
  font-size: 24rpx;
  padding: 28rpx 10rpx 28rpx 0;
}

.product_list_g .list .left {
  color: #000;
  width: 25%
}
.product_list_g .list .right {
  color: #666;
}
/* 底部 */
.product_footer{
  position: fixed;
  bottom: 0;
  height: 105rpx;
  width: 100%;
  display: flex;
}
.product_footer .left{
  width: 40%;
  background-color: #fff;
  text-align: center;
  padding-top: 30rpx
}
.left_image{
  width: 50rpx;
  height: 53rpx
}
.shop_number{
  background: linear-gradient(to right, #FF342D, #FF5882);
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  border-radius: 30rpx;
  height: 33rpx;
  position: absolute;
  padding: 5rpx 20rpx 5rpx 20rpx;
  margin-left: 22%;
  margin-top: -3%;
}
.product_footer .right{
  width: 60%;
  background-color: #fff;
  display: flex;
}
